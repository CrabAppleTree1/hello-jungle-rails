<tr>
 <%=  %>
   <td>
     <%= image_tag @products[item.product_id - 1].image.tiny %>
   </td>
   <td>
     <h4><%= @products[item.product_id - 1][:name] %></h4>
     <br>
     <p><%= @products[item.product_id - 1].description %></p>
   </td>
   <td>
     $<%= item.item_price_cents / 100.00 %>
   </td>
   <td>
     <%= item.quantity %>
   </td>
   <td>
     $<%= (item.item_price_cents * item.quantity) / 100.00 %>
   </td>
 </tr>